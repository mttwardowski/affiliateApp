{% extends '::base.html.twig' %}

{% block contentHeader %}Add Product{% endblock %}

{% block content %}

    <section class="content">
    <div class="row">

        <div class="col-xs-1"></div>

        <div class="col-xs-5">
            <div class="box box-warning">
                <div class="box-header with-border">
                    <h3 class="box-title">Basic Information</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                        <div class="form-group">
                            {{ form_start(basic_info_form, {'attr': {'role': 'form' }}) }}
                            <label>Status:</label>
                            <div class="row">
                                <div class="col-xs-4">
                                    {{ form_widget(basic_info_form.allow_sales) }}
                                </div>
                                <div class="col-xs-5">
                                    {{ form_widget(basic_info_form.marketplaceShow) }}
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Product Name</label>
                            {{ form_widget(basic_info_form.name) }}
                        </div>

                    <div class="form-group">
                        <label>Product Description</label>
                        {{ form_widget(basic_info_form.description) }}
                    </div>

                    <div class="form-group">
                        <label>Category</label>
                        {{ form_widget(basic_info_form.category) }}
                    </div>

                    <div class="form-group">
                        <label>Keywords</label>
                        {{ form_widget(basic_info_form.keywords) }}
                    </div>

                    <div class="form-group">
                        <label>Quantity (0 - Unlimited)</label>
                        {{ form_widget(basic_info_form.quantity) }}
                    </div>

                        <div class="form-group">
                            <label>Currency:</label>
                            <div class="row">
                                <div class="col-xs-7">
                                    {{ form_widget(basic_info_form.currency) }}
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Product Price</label>
                            {{ form_widget(basic_info_form.price) }}
                        </div>

                        <div class="form-group">
                            <label>Commission percentage</label>
                            {{ form_widget(basic_info_form.commission) }}
                        </div>

                        <div class="form-group">
                            <label>Support Email Address</label>
                            {{ form_widget(basic_info_form.supportEmail) }}
                        </div>

                        <div class="form-group">
                            <label>Support URL</label>
                            {{ form_widget(basic_info_form.supportURL) }}
                        </div>

                        <div class="form-group">
                            <label>Sales Page URL</label>
                            {{ form_widget(basic_info_form.pageURL) }}
                        </div>

                        <div class="form-group">
                            <label>Return Period</label>
                            <div class="row">
                            <div class="col-xs-3">
                                {{ form_widget(basic_info_form.returnPeriodNumber) }}
                            </div>
                            <div class="col-xs-7">
                                {{ form_widget(basic_info_form.returnPeriodUnit) }}
                            </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Affiliate Approval</label>
                            <div class="row">
                                <div class="col-xs-7">
                                    {{ form_widget(basic_info_form.affiliateApproval) }}
                                </div>
                            </div>
                        </div>

                </div>
                    <div class="box-footer">
                        <div class="row">
                            <div class="col-xs-2"></div>
                            <div class="col-xs-8">
                                <button type="submit" class="btn btn-block btn-primary">Save Product</button>
                            </div>
                            <div class="col-xs-2"></div>
                        </div>
                    </div>
                {{ form_end(basic_info_form) }}
                <!-- /.box-body -->
            </div>
        </div>

        <div class="col-xs-5">
            <div class="box box-warning">
                <div class="box-header with-border">
                    <h3 class="box-title">Advanced Features</h3>
                </div>
                <!-- /.box-header -->
                <div class="box box-solid collapsed-box">
